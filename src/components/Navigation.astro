---
const currentPath = Astro.url.pathname;

const links = [
  { href: '/story', label: 'Story' },
  { href: '/projects', label: 'Projects' },
  { href: '/articles', label: 'Articles' },
];
---

<nav>
  <ul class="flex gap-10">
    {
      links.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={['text-lg', { active: currentPath === link.href }]}
          >
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
