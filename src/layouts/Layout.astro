---
import { Font } from 'astro:assets';
import Header from '@/components/Header.astro';

const { class: className } = Astro.props;

import '@/styles/global.css';
import Footer from '@/components/Footer.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Cancelled Studio</title>
    <Font cssVariable="--font-urbanist" preload />
  </head>
  <body class="bg-background max-w-[888px] min-h-screen mx-auto flex flex-col">
    <Header />
    <main class:list={['grow', className]}>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    width: 100%;
    height: 100%;
  }
</style>
