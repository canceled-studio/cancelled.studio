---
import Layout from '@/layouts/Layout.astro';
---

<Layout>
  <h1 class="text-4xl font-bold mb-5">Our Projects</h1>
  <div class="flex">
    <div
      class="border border-gray-300/20 rounded-lg w-80 group hover:cursor-pointer"
    >
      <div class="relative w-full h-32 overflow-hidden">
        <h1
          class="absolute bottom-0 left-1/2 transition-transform duration-700 ease-out transform translate-y-1/3 -translate-x-1/2 text-6xl font-black opacity-20 group-hover:translate-y-0"
        >
          Moonbase
        </h1>
      </div>
      <div class="p-4 flex flex-col gap-2">
        <div class="flex items-center gap-2">
          <h2 class="text-2xl font-bold">Moonbase</h2>
          <span class="px-2 py-1 text-xs text-gray-500 bg-primary rounded-2xl">
            Coming Soon
          </span>
        </div>
        <p class="text-sm">Open-source AI-Native collaboration workspace.</p>
        <div class="gap-2 flex text-xs">
          <a href="#">AI</a>
          <a href="#">OSS</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
